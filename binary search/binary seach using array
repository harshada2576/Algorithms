#include <stdio.h>
#include <stdlib.h>
void insertionSort(int arr[], int n) {
	int i;
    for ( i = 1; i < n; i++) {
        int key = arr[i];
        int j = i - 1;

        while (j >= 0 && arr[j] > key) {
            arr[j + 1] = arr[j];
            j--;
        }
        arr[j + 1] = key;
    }
}
int binarysearch(int a[],int n,int x)
{
	int h,l,m,i;
	l=0;
	h=n-1;
	while(l<=h)
	{
		m=(l+h)/2;
		if(a[m]>x)
		{
			h=m-1;	
		}
		else if(a[m]<x)
		{
			l=m+1;
		}
		else if(a[m]==x)
		{
		return 1;	
		}	
	}
	return 0;	
}
int main() 
{	int n,x,ans;
    int i;
    printf("\nEnter numbers of elements of array:");
    scanf("%d",&n);
    int arr[n];
    printf("\nEnter elements of array:");
    for(i=0;i<n;i++)
    {
    	scanf("%d",&arr[i]);
	}
	printf("\nEnter number to find:");
    scanf("%d",&x);
	insertionSort(arr,n);
	ans=binarysearch(arr,n,x);
	if(ans==1)
		printf("Number present.");	
	else
		printf("Number absent.");
		return 0;
}
